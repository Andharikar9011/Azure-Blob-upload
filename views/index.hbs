<h1>Image Resizer</h1>

<h2>Upload photos</h2>
<form id="upload-form" action="/upload" method="POST" enctype="multipart/form-data">
<div><label for="userid">Email Id</label><br>
  <input type="text" id="uid" name="userid"><br><br>
  <select id="filetype" name="Type"><br>
    <option value="Image">Image</option></div><br><br>
  </select>
  <h2>Select an image to upload:</h2>
  <div class="upload-container"><input id="file-picker" type="file" name="file"></div>
  <div><input type="submit" value="Upload Image"></div>
</form>


<script>
  document.addEventListener('DOMContentLoaded', () => {

    const message = document.getElementById('message');
    const picker = document.getElementById('file-picker');

    document.getElementById('upload-form').addEventListener('submit', (e) => {

      message.innerText = '';

      if(!picker.files.length) {
        message.innerText = 'Please select an image to upload.';
        e.preventDefault();
        return false;
      }
    });

  });
</script>